<div class="container mt-10rem">
  <h2 class="text-center">Créer un évènement</h2>
  <% if @event.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <ul>
        <% @event.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
  <div class="row">
    <div id="form-new" class="col-md-6 offset-md-3 mt-3 pt-5 pb-5 p-3">
      <%= form_for @event do |f| %>
        <div class="form-group">
          <%= f.label :titre %><br />
          <%= f.text_field :title, autofocus: true, class:"form-control", required:"true"%>
        </div>
        <div class="form-group">
          <%= f.label :description %><br />
          <%= f.text_area :description, autofocus: true, class:"form-control", required:"true" %>
        </div>
        <div class="form-group">
          <div class="form-row">
            <div class="col-6">
              <%= f.label :date_de_début %><br />
              <input type="date" name="date" class="form-control" value="<%= @date %>"required></input>
            </div>
            <div class="col-6">
              <%= f.label :heure_de_début %><br />
              <input type="time" name="hour" class="form-control" value="<%= @hour %>" required></input>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="form-row">
            <div class="col-6">
              <%= f.label :prix %><br />
              <%= f.number_field :price, autofocus: true, class:"form-control", required:"true" %>
            </div>
            <div class="col-6">
              <%= f.label :durée %><br />
              <%= f.number_field :duration, autofocus: true, class:"form-control", required:"true" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :lieu %><br />
          <%= f.text_field :location, autofocus: true, class:"form-control", required:"true" %>
        </div>
        <%= f.submit "Créer", class:"btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>