<section class="jumbotron text-center text-white">

  <div class="container">
    <h1 class="jumbotron-heading text-white">Pour ceux qui adorent sortir</h1>
    <p class="lead">Trouvez ici rapidement des évènements près de chez vous.</p>
    <p id="bouton-jumbotron"><%= link_to "Créer un évènement", new_event_path, class: "btn btn-primary" %></p>
  </div>
</section>
<div class="album py-5 bg-light">
  <div class="container">
    <h3 class="mt-3 mb-3">Évènements à proximité:</h3>
    <div class="card-columns">
      <% @events.each do |e| %>
        <div class="card mb-4 box-shadow border-primary">
          <!-- <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap"> -->
          <div class="card-header">
            <p>"<%= e.title %>"</p>
            <div class="card-price">
              <%= e.price %>€
            </div>
            <div class="card-duration">
              <%= e.duration_display %>
            </div>
          </div>
          <div class="card-body">
            <p class="card-text"><%= e.description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to "Voir", event_path(e.id), class:"btn btn-sm btn-outline-primary" %>
              </div>
              <small class="text-muted"><%= e.start_date.strftime("%d/%m/%Y à %H:%M") %></small>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>